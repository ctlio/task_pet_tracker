<h2>Edit <%= resource_name.to_s.humanize %></h2>

<form class="row g-3" id="edit_user" action="<%= registration_path(resource_name) %>" method="post">
  <div class="col-md-6">
    <label for="user_email" class="form-label">Email</label>
    <input type="email" class="form-control" id="user_email" name="user[email]" value="<%= resource.email %>" required="required" autofocus="autofocus" autocomplete="email">
  </div>
  <div class="col-md-6">
    <label for="user_username" class="form-label">Username</label>
    <input type="text" class="form-control" id="user_username" name="user[username]" value="<%= resource.username %>" required="required">
  </div>
  <div class="col-md-6">
    <label for="user_avatar_image" class="form-label">Avatar Image</label>
    <input type="text" class="form-control" id="user_avatar_image" name="user[avatar_image]" value="<%= resource.avatar_image %>" required="required" autocomplete="new-avatar" placeholder="Image URL here">
  </div>
  <div class="col-md-6">
    <label for="user_password" class="form-label">Password</label>
    <input type="password" class="form-control" id="user_password" name="user[password]" autocomplete="new-password", placeholder= "Type new password or leave blank">
  </div>
  <div class="col-md-6">
    <label for="user_password_confirmation" class="form-label">Confirm Password</label>
    <input type="password" class="form-control" id="user_password_confirmation" name="user[password_confirmation]" autocomplete="new-password", placeholder = "Confirm new password">
  </div>
  <div class="col-md-6">
    <label for="user_current_password" class="form-label">Current Password</label>
    <input type="password" class="form-control" id="user_current_password" name="user[current_password]" required="required" autocomplete="current-password", placeholder = "Confirm changes with previous password">
  </div>
  <div class="col-12">
    <%= hidden_field_tag :_method, :put %>
    <%= csrf_meta_tags %>
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>


<div>
  <h3>Cancel my account</h3>

  <div><%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
</div>
<%= link_to "Back", :back %>
