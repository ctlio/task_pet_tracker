<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="d-flex justify-content-center mb-3">
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#PetAdvice">
    Get advice from <%= @pet.name.capitalize %>
  </button>

  <div class="modal fade" id="PetAdvice" tabindex="-1" aria-labelledby="PetAdviceLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="PetAdviceLabel" style="color: black;"><%= @pet.name.capitalize %> wants to tell you...</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p style="color: black;"><%= @advice %></p>
        </div>
      </div>
    </div>
  </div>

</div>

<div class = "container">
  <%= render @pet %>
</div>


<div class="d-flex justify-content-center mb-3">
  <%= link_to "Edit this pet", edit_pet_path(@pet) %> |
  <%= link_to "Back to pets", user_pets_path(username: current_user.username)%>
</div>

<div class="d-flex justify-content-center mb-3">
  <%= button_to "Release this pet?", @pet, method: :delete, class: "btn btn-danger" %>
</div>
