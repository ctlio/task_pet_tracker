<div id="<%= dom_id task %>">

  <ul class="list-group">
    <%if task.status == "pending"%>
      <li class="list-group-item list-group-item-primary">
      <%elsif task.status == "completed" %>
        <li class="list-group-item list-group-item-success">
        <%elsif task.status == "failed" %>
          <li class="list-group-item list-group-item-danger">
          <% end %>
          <div>
            Task description: 
            <%= task.description %>
          </div>
          <div>
            Status: 
            <%= task.status %>
          </div>
          <div>
            Due date:
            <%= task.due_date.strftime("%Y-%m-%d %H:%M:%S")%>
          </div>
          <div>
            <% if task.status == "pending" %>
              <%= form_with(model: task, local: true) do |form| %>
                <%= form.hidden_field :status, value: "completed" %>
                <%= form.submit "Mark as Completed", class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
